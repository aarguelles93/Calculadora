<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/Layout"
    style="@style/DarkThemeLayout">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/table_numbers"
            android:layout_weight="5">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:id="@+id/textView_Prev"
                    android:textColor="#ffd9d9d9" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/textView_Actual"
                    android:textColor="#ffd9d9d9"
                    android:textSize="20dp"
                    android:lines="2"
                    android:maxLines="2" />
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_column="0"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_column="1"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_column="2"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="("
                    android:id="@+id/button_LeftParenth"
                    android:layout_column="3"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text=")"
                    android:id="@+id/button_RightParenth"
                    android:layout_column="4"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_column="0"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_column="1"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_column="2"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:id="@+id/button_Dot"
                    android:layout_column="3"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/button_Div"
                    android:layout_column="4"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_column="0"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_column="1"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_column="2"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/button0"
                    android:layout_column="3"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:id="@+id/button_Equals"
                    android:layout_column="4"
                    android:layout_weight="1" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="c"
                android:id="@+id/button_C"
                android:textSize="25dp"
                android:layout_weight="1.6" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="*"
                android:id="@+id/button_Multi"
                android:layout_weight="1" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="-"
                android:id="@+id/button_Subs"
                android:layout_weight="1" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="+"
                android:id="@+id/button_Sum"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
